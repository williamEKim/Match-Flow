            <a class="text-lg font-medium text-gray-700 dark:text-gray-300 hover:underline" href="#">
                Matches
            </a>
            <a class="text-lg font-medium text-gray-700 dark:text-gray-300 hover:underline" href="#">
                News
            </a>
            </nav>
            <main class="flex flex-col lg:flex-row gap-6 p-4 lg:p-8">
            <section class="flex flex-col gap-6 w-full w-2/3">
                <div class="flex flex-col items-center gap-4 p-6 bg-white dark:bg-gray-800 rounded-lg shadow">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Victory Rate Calculator</h2>
                <a
                    class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700"
                    href="#"
                >
                    See Results
                </a>
                </div>
            </section>
            <aside class="flex flex-col gap-6 w-full w-1/3">
                <section class="flex flex-col gap-4 p-6 bg-white dark:bg-gray-800 rounded-lg shadow">
                <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100">Top News</h2>
                <div class="flex flex-col gap-4">
                    <% for (var i = 0; i < 3; i++) { %>
                        <article>
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100"><%= result[i].title %></h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400"><%= result[i].response %></p>
                            <a class="text-sm text-blue-600 dark:text-blue-400 hover:underline" href="<%= result[i].url.toString() %>">
                                Read More
                            </a>
                        </article>
                    <% } %>
